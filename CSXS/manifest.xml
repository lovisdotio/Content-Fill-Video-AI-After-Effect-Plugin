<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="5.0" ExtensionBundleId="com.lovisodin.generativefill" ExtensionBundleVersion="1.0.0" 
                  ExtensionBundleName="Generative Fill Video" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <AuthorName>Lovis Odin</AuthorName>
  <Contact mailto="lovisodin@gmail.com"/>
  <Legal href="https://lovis.io/legal"/>
  <Abstract href="https://lovis.io/generative-fill-video"/>
  
  <ExtensionList>
    <Extension Id="com.lovisodin.generativefill.panel" Version="1.0.0"/>
  </ExtensionList>
  
  <ExecutionEnvironment>
    <HostList>
      <Host Name="AEFT" Version="13.0"/>
      <Host Name="AEFT" Version="14.0"/>
      <Host Name="AEFT" Version="15.0"/>
      <Host Name="AEFT" Version="16.0"/>
      <Host Name="AEFT" Version="17.0"/>
      <Host Name="AEFT" Version="18.0"/>
      <Host Name="AEFT" Version="22.0"/>
      <Host Name="AEFT" Version="23.0"/>
      <Host Name="AEFT" Version="24.0"/>
      <Host Name="AEFT" Version="25.0"/>
    </HostList>
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="5.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  
  <DispatchInfoList>
    <Extension Id="com.lovisodin.generativefill.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./index.html</MainPath>
          <ScriptPath>./jsx/main.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
            <Parameter>--disable-web-security</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>Generative Fill Video - Lovis Odin</Menu>
          <Geometry>
            <Size>
              <Height>600</Height>
              <Width>350</Width>
            </Size>
            <MinSize>
              <Height>400</Height>
              <Width>300</Width>
            </MinSize>
            <MaxSize>
              <Height>800</Height>
              <Width>500</Width>
            </MaxSize>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
  
  <!-- Network access permissions for FAL.ai API -->
  <ExtensionSecurity>
    <AllowNetworkAccess>true</AllowNetworkAccess>
    <AllowedDomains>
      <Domain>*.fal.run</Domain>
      <Domain>*.fal.ai</Domain>
      <Domain>fal.run</Domain>
      <Domain>fal.ai</Domain>
      <Domain>queue.fal.run</Domain>
      <Domain>v2.fal.run</Domain>
      <Domain>v3.fal.media</Domain>
    </AllowedDomains>
  </ExtensionSecurity>
</ExtensionManifest>